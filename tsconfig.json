{
    "compilerOptions": {
        "module": "CommonJS",
        "target": "ES2015",
        "declaration": true,
        "outDir": "./dist",
        "forceConsistentCasingInFileNames": true,
        "moduleResolution": "node",
        "esModuleInterop": true,
		"removeComments": true,
        "strict": true
    },
    "include": [
        "./src",
        "./debug"
    ],
    "exclude": [
        "node_modules",
        "**/tests/*"
      ]
    }